
@model EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model is not null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" asp-for="Id" class="form-control" id="id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" id="name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" asp-for="DisplayName" class="form-control" id="displayName" />
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button asp-area="" asp-controller="AdminTags" asp-action="Delete" type="submit" class="btn btn-danger ms-3">Delete</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <p>Tag not found!</p>
    }

</div>